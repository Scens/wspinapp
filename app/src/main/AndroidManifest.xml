<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACTION_OPEN_DOCUMENT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wspinapp"
        tools:targetApi="31">
        <activity
            android:name=".WallsActivity"
            android:exported="false"
            android:parentActivityName=".WallsActivity" />
        <activity
            android:name=".AddWallActivity"
            android:exported="false"
            android:parentActivityName=".AddWallActivity" />
        <activity
            android:name=".AddRouteActivity"
            android:exported="false"
            android:parentActivityName=".AddRouteActivity" />
        <activity
            android:name=".WallActivity"
            android:exported="false"
            android:parentActivityName=".WallActivity" />
        <activity
            android:name=".utils.FetchWallsActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.wspinapp"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />
        </provider>
    </application>

</manifest>